@model Product;

<form class="container" method="post" asp-controller="Product" asp-action="AddNewProduct">

    <div class="form-group">
        <label asp-for="Name"></label>
        <input class="form-control" type="text" name="Name" value="" asp-for="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Price"></label>
        <input class="form-control" type="number" name="Price" value="" asp-for="Price" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Discount"></label>
        <input class="form-control" type="number" name="Discount" value="" asp-for="Discount" />
        <span asp-validation-for="Discount" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DiscountedPrice"></label>
        <input class="form-control" type="number" name="DiscountedPrice" value="" asp-for="DiscountedPrice" />
        <span asp-validation-for="DiscountedPrice" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <input class="form-control" type="text" name="Description" value="" asp-for="Description" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Image"></label>
        <input class="form-control" type="text" name="Image" value="" asp-for="Image" />
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary bg-info">Підтвердити</button>
    <button asp-controller="Home" asp-action="Index" class="btn btn-secondary">Назад</button>
</form> 